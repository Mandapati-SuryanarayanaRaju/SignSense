<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gesture Recognition</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.0.0/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
</head>
<body class="bg-gray-100">
    <!-- Navbar -->
    <nav class="p-4 bg-gray-900 border-b border-gray-400 shadow-md">
        <div class="flex items-center justify-between max-w-screen-xl px-16 mx-auto text-white">
            <h1 class="text-2xl font-semibold">
                <a href="/" class="flex items-center space-x-2 text-white">
                    <span class="text-blue-400">Sign</span><span class="text-yellow-400">Sense</span>
                </a>
            </h1>
            <div class="flex space-x-4">
                <a href="/" class="px-4 py-2 text-sm bg-blue-700 rounded hover:bg-blue-500">Home</a>
                <a href="/profile" class="px-4 py-2 text-sm bg-green-700 rounded hover:bg-green-500">Profile</a>
                <a href="/about" class="px-4 py-2 text-sm bg-yellow-700 rounded hover:bg-yellow-500">About</a>
                <a href="/config/" class="px-4 py-2 text-sm bg-purple-700 rounded hover:bg-purple-500">Config</a>
                <% if (user && user.role !== 'user') { %>  
                    <a href="/admin" class="px-4 py-2 text-sm bg-gray-700 rounded hover:bg-gray-500">Admin</a>
                    <% } %>
                <a href="/logout" class="px-4 py-2 text-sm bg-red-700 rounded hover:bg-red-500">Logout</a>
            </div>
        </div>
    </nav>

    <section class="max-w-screen-xl px-16 py-8 mx-auto my-20">
        <div class="p-6 bg-white rounded-lg shadow-lg">
            <h1 class="mb-4 text-2xl font-bold">Gesture Recognition</h1>
            
            <form id="uploadForm" action="/result" method="POST" enctype="multipart/form-data">
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700">Upload Image</label>
                    <input type="file" id="imageFile" name="image_file" accept="image/*" class="block w-full p-4 mt-1 border-gray-300 rounded-md shadow-sm">
                </div>

                <div class="my-4 text-center">
                    <button type="button" id="openCamera" class="px-4 py-2 text-white bg-blue-500 rounded">Open Camera</button>
                </div>

                <div id="previewContainer" class="hidden mt-4">
                    <img id="capturedImagePreview" class="block w-1/2 mx-auto rounded-md shadow-md" alt="Captured Image">
                    <div class="flex justify-center mt-4 space-x-4">
                        <button type="button" id="resetImage" class="px-4 py-2 text-white bg-red-500 rounded">Reset</button>
                    </div>
                </div>

                <div id="cameraContainer" class="hidden">
                    <video id="video" class="block w-1/2 mx-auto rounded-md shadow-md"></video>
                    <button type="button" id="capture" class="block w-1/2 py-2 mx-auto mt-2 text-white bg-green-500 rounded">Capture Image</button>
                </div>

                <canvas id="canvas" class="hidden"></canvas>
                <input type="hidden" id="capturedImage" name="captured_image">

                <button type="submit" class="w-full py-2 mt-4 text-white bg-pink-500 rounded">Submit</button>
            </form>
        </div>        
    </section>

    <footer class="fixed bottom-0 w-full p-4 text-center text-white bg-gray-900 border-t border-gray-400 shadow-md">
        &#169; SignSense
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const video = document.getElementById('video');
            const captureButton = document.getElementById('capture');
            const openCameraButton = document.getElementById('openCamera');
            const previewContainer = document.getElementById('previewContainer');
            const capturedImagePreview = document.getElementById('capturedImagePreview');
            const resetImageButton = document.getElementById('resetImage');
            const uploadForm = document.getElementById('uploadForm');
            const cameraContainer = document.getElementById('cameraContainer');
            
            let capturedBlob = null;
            let mediaStream = null;
            let autoCaptureTimeout = null;

            const stopCamera = () => {
                if (mediaStream) {
                    mediaStream.getTracks().forEach(track => track.stop());
                    mediaStream = null;
                }
                cameraContainer.classList.add('hidden');
            };

            const captureImage = () => {
                const canvas = document.createElement('canvas');
                canvas.width = video.videoWidth;
                canvas.height = video.videoHeight;
                const ctx = canvas.getContext('2d');
                ctx.drawImage(video, 0, 0, canvas.width, canvas.height);

                canvas.toBlob((blob) => {
                    capturedBlob = blob;
                    const imageUrl = URL.createObjectURL(blob);
                    capturedImagePreview.src = imageUrl;
                    previewContainer.classList.remove('hidden');
                }, 'image/jpeg');

                stopCamera();
                setTimeout(() => { previewContainer.classList.add('hidden'); }, 5000);
            };

            openCameraButton.addEventListener('click', async () => {
                try {
                    mediaStream = await navigator.mediaDevices.getUserMedia({ video: true });
                    video.srcObject = mediaStream;
                    video.play();
                    cameraContainer.classList.remove('hidden');
                    
                    autoCaptureTimeout = setTimeout(() => { captureImage(); }, 10000);
                } catch (error) {
                    console.error("Error accessing camera:", error);
                    alert("Could not access camera");
                }
            });

            captureButton.addEventListener('click', () => {
                clearTimeout(autoCaptureTimeout);
                captureImage();
            });

            resetImageButton.addEventListener('click', () => {
                capturedBlob = null;
                capturedImagePreview.src = "";
                previewContainer.classList.add('hidden');
            });

            uploadForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                const formData = new FormData(uploadForm);

                if (capturedBlob) {
                    formData.append('image_file', new File([capturedBlob], 'captured_image.jpg', { type: 'image/jpeg' }));
                }

                try {
                    const response = await fetch(uploadForm.action, {
                        method: 'POST',
                        body: formData
                    });

                    if (!response.ok) throw new Error('Failed to submit image');

                    const resultPage = await response.text();
                    document.body.innerHTML = resultPage;
                } catch (error) {
                    console.error("Error submitting image:", error);
                    alert("Error submitting the image.");
                }
            });
        });
    </script>
</body>
</html>